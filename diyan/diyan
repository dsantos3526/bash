#!/bin/bash

tanggal(){
read -p "akan menampilkan tanggal,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "Sekarang Tanggal $(date)"
else
clear
echo -e "kembali ke halaman awal..."
exit
fi
}

kalender(){
